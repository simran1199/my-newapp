<%-include("../partials/header")%>


<div class="container">
	
	<header class="jumbotron">
		<div class="container">
			<h1>
		WELCOME TO THE YELPCAMP!!
	</h1>
		<p>
			View Our hand-picked Campgrounds from all over the world!!
		</p>
		<p>
			<a  class="btn btn-primary btn-lg" href="/campgrounds/new">Wanna add a new campground?</a>
		</p>
		</div>
	</header>



	<div class="row text-center" style="dispplay:flex; flex-wrap:wrap;">
		<% campgrounds.forEach(function(campgrounds){%>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
			<img src="<%= campgrounds.image%>">
			<div class="caption">
				<h4><%= campgrounds.name%></h4>
			</div>
			<p>
				<a class="btn btn-primary" href="/campgrounds/<%= campgrounds._id%>">Wanna Explore?</a>
			</p>
		</div>		
	</div>

	<% });%>
	

		
		
	</div>

	
	
</div>



<%-include("../partials/footer")%>